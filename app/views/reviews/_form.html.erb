<div class="col-md-6 col-md-offset-3">
	
	<div class="new-book-form">

		<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
			<div id="rating-form">
				<label>Rating</label>
			</div>
			<%= f.input :comment %>
			<%= f.button :submit, class: "btn btn-custom-2" %>	
		<% end %>

	</div>

</div>

<script>
$('#rating-form').raty({
	path: '/assets/',
	scoreName: 'review[rating]'
});
</script>